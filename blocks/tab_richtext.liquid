{% liquid
  assign product = closest.product

  if request.visual_preview_mode and product == blank
    assign product = collections.all.products.first
  endif

  assign padding_bottom = block.settings.padding_bottom | default: 0
%}

<div
  class="product__block product__block--tabs tabs-wrapper block-padding"
  style="padding-bottom: {{ padding_bottom }}px;"
  {{ block.shopify_attributes }}
>
  {% render 'product-tabs', product: product, block: block %}
</div>

{% schema %}
{
  "name": "t:tabs_block.name",
  "tag": null,
  "settings": [
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "t:tabs_block.show_description",
      "default": true
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "t:tabs_block.title_1"
    },
    {
      "type": "richtext",
      "id": "raw_content_1",
      "label": "t:tabs_block.raw_content_1"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "t:tabs_block.title_2"
    },
    {
      "type": "richtext",
      "id": "raw_content_2",
      "label": "t:tabs_block.raw_content_2"
    },
    {
      "type": "text",
      "id": "title_3",
      "label": "t:tabs_block.title_3"
    },
    {
      "type": "richtext",
      "id": "raw_content_3",
      "label": "t:tabs_block.raw_content_3"
    },
    {
      "type": "text",
      "id": "title_4",
      "label": "t:tabs_block.title_4"
    },
    {
      "type": "richtext",
      "id": "raw_content_4",
      "label": "t:tabs_block.raw_content_4"
    },
    {
      "type": "text",
      "id": "title_5",
      "label": "t:tabs_block.title_5"
