    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:tabs_block.padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    }
  ]
}
{% endschema %}
