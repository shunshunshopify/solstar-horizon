{%- doc -%}
  @param {string} [suffix] - The suffix to add to the collection title
{%- enddoc -%}

{% liquid
  assign block_settings = block.settings
  if closest.collection == blank
    assign collection_title = 'placeholders.collection_title' | t
  else
    assign collection_title = closest.collection.title
  endif

  assign preset = block_settings.type_preset | default: 'paragraph'
  assign heading_tag = ''

  case preset
    when 'h1'
      assign heading_tag = 'h1'
    when 'h2'
      assign heading_tag = 'h2'
    when 'h3'
      assign heading_tag = 'h3'
    when 'h4'
      assign heading_tag = 'h4'
    when 'h5'
      assign heading_tag = 'h5'
    when 'h6'
      assign heading_tag = 'h6'
    when 'paragraph'
      assign heading_tag = 'p'
  endcase

  assign preset_font_size_override = ''
  if block_settings.type_preset != 'custom'
    assign preset_font_size_override = block_settings.preset_font_size
  endif
%}

{% assign fallback_copy = collection_title | append: suffix %}

{% render 'text',
  block: block,
  fallback_text: fallback_copy,
  preset_font_size_override: preset_font_size_override,
  element_override: heading_tag
%}

